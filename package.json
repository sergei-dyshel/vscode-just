{
  "name": "just2",
  "displayName": "Just pilot",
  "description": "Provides syntax and recipe launcher for Just scripts.",
  "version": "2.0.3",
  "publisher": "lrh3321",
  "private": true,
  "license": "MIT",
  "icon": "images/robot.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "keywords": [
    "just",
    "justfile",
    "make",
    "scripts",
    "task",
    "recipe",
    "launch"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lrh3321/vscode-just.git"
  },
  "bugs": {
    "url": "https://github.com/lrh3321/vscode-just/issues"
  },
  "homepage": "https://github.com/lrh3321/vscode-just",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "just.run",
        "title": "%extension.runRecipe.title%",
        "category": "Just"
      },
      {
        "command": "just.enableCodeLens",
        "title": "%extension.enableCodeLens.title%",
        "category": "Just"
      },
      {
        "command": "just.disableCodeLens",
        "title": "%extension.disableCodelens.title%",
        "category": "Just"
      }
    ],
    "configuration": {
      "title": "Just",
      "properties": {
        "just.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "title": "%extension.enableCodeLens.title%",
          "description": "%extension.enableCodeLens.description%"
        },
        "just.justExecutable": {
          "type": "string",
          "default": "just",
          "title": "$extension.justExecutable.title%",
          "description": "%extension.justExecutable.description%"
        },
        "just.justShell": {
          "type": "string",
          "default": "",
          "title": "$extension.justShell.title%",
          "description": "%extension.justShell.description%"
        },
        "just.justUnstableFeatures": {
          "type": "boolean",
          "default": false,
          "title": "$extension.justUnstableFeatures.title%",
          "description": "%extension.justUnstableFeatures.description%"
        }
      }
    },
    "languages": [
      {
        "id": "justfile",
        "aliases": [
          "Justfile",
          "just"
        ],
        "extensions": [
          "justfile",
          ".justfile",
          "Justfile",
          "JUSTFILE",
          ".just",
          ".justfile"
        ],
        "icon": {
          "dark": "./images/logo-dark.svg",
          "light": "./images/logo-light.svg"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "justfile",
        "scopeName": "source.justfile",
        "path": "./syntaxes/just.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript",
          "meta.embedded.block.lua": "lua",
          "meta.embedded.block.perl": "perl",
          "meta.embedded.block.powershell": "powershell",
          "meta.embedded.block.python": "python",
          "meta.embedded.block.ruby": "ruby",
          "meta.embedded.block.shellscript": "shellscript"
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "just",
        "properties": {
          "recipe": {
            "type": "string",
            "default": "",
            "description": "The recipe name"
          },
          "justfile": {
            "type": "string",
            "description": "The justfile containing the recipe",
            "default": "Justfile",
            "examples": [
              "Justfile",
              "justfile",
              ".justfile"
            ]
          },
          "workingDirectory": {
            "type": "string",
            "description": "The working directory",
            "default": "${workspaceFolder}",
            "examples": [
              "${workspaceFolder}",
              "./"
            ]
          },
          "variables": {
            "type": "object",
            "description": "Override <VARIABLE> with <VALUE>",
            "additionalProperties": {
              "type": "string"
            }
          },
          "args": {
            "type": "array",
            "description": "Override <VARIABLE> with <VALUE>",
            "items": {
              "type": "string"
            }
          },
          "shell": {
            "type": "string",
            "description": "Invoke <SHELL> to run recipes"
          },
          "shellArgs": {
            "type": "array",
            "description": "Invoke shell with <SHELL-ARG> as an argument",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "recipe"
        ]
      }
    ],
    "snippets": [
      {
        "language": "justfile",
        "path": "./snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint ./src",
    "lint-fix": "eslint ./src --fix",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test-grammar": "npx mocha --ui tdd --timeout 999999 --file ./src/grammar/test.spec.ts --require ts-node/register ./src/grammar/"
  },
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.7",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.29.0",
    "eslint": "^8.57.0",
    "glob": "^10.4.2",
    "globals": "^15.6.0",
    "js-yaml": "^4.1.0",
    "mocha": "^10.4.0",
    "ts-node": "^10.9.2",
    "typescript": "5.4",
    "typescript-eslint": "^7.13.1"
  },
  "dependencies": {
    "antlr4": "^4.13.1-patch-1"
  }
}
